<html lang="en">

<head>
    {{>headerLink}}
</head>

<body>
    <!--Navbar -->
    {{>header}}
    <!--header-->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn"></input>
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Wednesday</p>
                        <p id="today_date">13 oct</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name"> Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"> <span id="temp_real_val">0</span> <sup>o</sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"> </i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer  -->
    {{>footer}}
    <script src="./js/main.js"></script>
    <script>


        const getCurrentDay = () => {
            var d = new Date();
            var weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";
            var n = weekday[d.getDay()];
            document.getElementById("day").innerHTML = n;
        }
        getCurrentDay();

        const getdateMonth = () => {
            var d = new Date();
            var months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];

            const month = months[d.getMonth()];
            const date = d.getDate();

            document.getElementById("today_date").innerHTML = date + " " + month;
        }

        getdateMonth();
    </script>
</body>

</html>